@model flightproj.Models.PragatiPassenger

@{
    ViewData["Title"] = "BookAFlight";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<h1>Book your flight</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BookAFlight">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Flight.Flightname" class="control-label"></label>
                <input asp-for="Flight.Flightname" class="form-control" value="@ViewBag.flightName" readonly/>
                <span asp-validation-for="Flight.Flightname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flightid" class="control-label"></label>
                <input asp-for="Flightid" class="form-control" value="@ViewBag.flightid" readonly/>
                <span asp-validation-for="Flightid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactNo" class="control-label"></label>
                <input asp-for="ContactNo" class="form-control" />
                <span asp-validation-for="ContactNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.Price" class="control-label"></label>
                <input asp-for="Flight.Price" class="form-control" value="@ViewBag.cost" readonly/>
                <span asp-validation-for="Flight.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
